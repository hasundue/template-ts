{
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "cache": "deno cache ./**/*.ts --lock",
    "lock": "deno task cache --lock-write && git add deno.lock",
    "test": "deno test --parallel",
    "dev": "deno task fmt && deno task lint && deno task lock && deno task test",
    "run": "deno run --allow-env --allow-read --allow-write --allow-run --allow-net=deno.land,registry.npm.js",
    "molt": "deno task -q run https://deno.land/x/molt@0.7.2/cli.ts",
    "update": "deno task -q molt check ./lib/**/*.ts",
    "update:commit": "deno task -q molt update ./**/*.ts --commit"
  },
  "fmt": {
    "exclude": [
      "CHANGELOG.md"
    ]
  },
  "lint": {
    "rules": {
      "include": [
        "no-sync-fn-in-async-fn"
      ]
    }
  }
}
